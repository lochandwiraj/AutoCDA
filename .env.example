# AutoCDA Environment Variables

# API Keys
OPENROUTER_API_KEY=your_api_key_here

# Directories
OUTPUT_DIR=./output_api
TEMP_DIR=./temp

# Rate Limiting
MAX_REQUESTS_PER_HOUR=100

# Timeouts (seconds)
API_TIMEOUT=30
SKIDL_EXECUTION_TIMEOUT=10

# Security
MAX_INPUT_LENGTH=500
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:8501

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/autocda.log

# Features
ENABLE_CACHING=true
ENABLE_TELEMETRY=false

# Flask
FLASK_ENV=production
FLASK_DEBUG=False
PORT=5000
